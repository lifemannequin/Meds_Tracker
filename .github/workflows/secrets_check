name: secrets check

on:
  push:
  workflow_dispatch:  # Allows manual triggering

jobs:
  refresh_and_run:
    runs-on: ubuntu-latest

    steps:
      - name: Check out repository
        uses: actions/checkout@v4
        with:
          fetch-depth: 0  # Ensure the full repo is cloned

      - name: print secrets
        shell: bash
        env:
            KEY : ${{secrets.DROPBOX_APP_KEY}}
        run: |
              echo "$KEY"
